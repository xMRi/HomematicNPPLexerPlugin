<NotepadPlus version="2">
    <!-- NB: TinyXML used by NPP doesn't handle UTF8 well - encode unicode chars with &#x... notation -->
	<!--     Probably doesn't matter in this example since Scintilla WordList only support chars < 0x80 -->	
    <Languages>
        <Language name="Homematic" ext="hsc" commentLine="" commentStart="" commentEnd="">
            <Keywords name="instre1">Chedder Dunlop Stilton</Keywords>
            <Keywords name="type1">Camembert &#x00C9;poisses Roquefort</Keywords>
        </Language>
    </Languages>
    <LexerStyles>
        <LexerType name="LexerTemplate" desc="LexerTemplate" ext="" excluded="no">
            <WordsStyle name="DEFAULT" styleID="0" fgColor="FF00FF" bgColor="FFFFFF" fontName="" fontStyle="0" fontSize="" />
            <WordsStyle name="CHEESE" styleID="1" fgColor="FFFF00" bgColor="808000" fontName="" fontStyle="1" fontSize="" keywordClass="instre1" />
            <WordsStyle name="FROMAGE" styleID="2" fgColor="FFFF00" bgColor="008080" fontName="" fontStyle="1" fontSize="" keywordClass="type1">Brie</WordsStyle>
        </LexerType>
    </LexerStyles>
</NotepadPlus>
